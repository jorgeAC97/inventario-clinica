<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.clinica.Controladores.MenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <Label text="Menú Principal" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <VBox spacing="15.0" alignment="CENTER">
        <Button fx:id="btnAnadirInventario" text="Añadir Inventario" 
                onAction="#abrirAnadirInventario"
                style="-fx-font-size: 14px; -fx-min-width: 200px; -fx-min-height: 40px;"/>
        <Button fx:id="btnEditarProductos" text="Editar Productos" 
                style="-fx-font-size: 14px; -fx-min-width: 200px; -fx-min-height: 40px;"/>
    </VBox>
</VBox> 